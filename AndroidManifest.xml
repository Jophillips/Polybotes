<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jp.polybotes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jp.polybotes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jp.polybotes.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jp.polybotes.myMenu"
            android:label="@string/app_activity_menu" >
            <intent-filter>
                <action android:name="android.intent.action.myMENU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jp.polybotes.Credits"
            android:label="@string/title_activity_credits" >
        </activity>
        <activity
            android:name="com.jp.polybotes.HowToPlay"
            android:label="@string/title_activity_how_to_play" >
        </activity>
        <activity
            android:name="com.jp.polybotes.Preferences"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name="com.jp.polybotes.AnswersScreen"
            android:label="@string/title_activity_answers_screen" >
        </activity>
        <activity
            android:name="com.jp.polybotes.Practice"
            android:label="@string/title_activity_practice" >
        </activity>
    </application>

</manifest>
